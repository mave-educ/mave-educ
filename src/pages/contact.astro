---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Mave - Contacto',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Widget HeroText ******************* -->

  <HeroText tagline="Contacto" title="¡Conectemos!" />

  <ContactUs
    id="form"
    title="¡Envíanos un mensaje hoy!"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electrónico',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte suele responder dentro de las 24 horas hábiles."
  />

  <!-- Widget Features2 ************** -->

  <Features2
    title="¡Estamos aquí para ayudarte!"
    items={[
      {
        title: 'Soporte general',
        description: `Chatea con nosotros para consultas relacionadas con la gestión de cuentas, navegación por el sitio web, problemas de pago, acceso a plantillas compradas o preguntas generales sobre la funcionalidad del sitio.`,
      },
      {
        title: 'Contacto con ventas',
        description:
          'Chatea con nosotros para preguntas sobre compras, opciones de personalización, licencias para uso comercial, consultas sobre una plantilla específica, etc.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Chatea con nosotros cuando enfrentes problemas como la instalación de plantillas, dificultades al editar, problemas de compatibilidad con el software o errores de descarga, u otros desafíos técnicos relacionados con el uso de las plantillas.',
      },
      {
        title: 'Teléfono',
        description: '+56 944086220',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electrónico',
        description: 'mave@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: '1234 Calle Lorem Ipsum, 12345, Miami, EE.UU.',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
